/* pages/user/index.wxss */
@import "../../common/css/font";
.user-info {
  background: #fff;
  padding: 30rpx;
  border-bottom: 1px solid #ddd;
}
.user-photo {
  display: block;
  margin: 30rpx auto;
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
}
.user-txt {
  font-size: 30rpx;
  color: #333;
  line-height: 60rpx;
  text-align: center;
}
.user-txt  text {
  margin: 0 10rpx; 
}
.user-list navigator{
  position: relative;
  display: block;
  padding: 0 30rpx;
  font-size: 30rpx;
  line-height: 120rpx;
  background: #fff;
  border-bottom: 1px solid #ddd;
  color: #333;
}
.user-list navigator:after {
  position: absolute;
  top: 0;
  right: 30rpx;
  font-size: 50rpx;
}