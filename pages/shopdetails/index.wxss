/* pages/shopdetails/index.wxss */
@import "../../common/css/list";
@import "../../common/css/font";
.shop-details {
  background: #fff;
}
.list-item {
  padding: 30rpx;
}
.list-img {
  width: 237.5rpx;
  height: 179rpx;
}
.list-info {
  width: 437.5rpx;
}
.list-title {
  line-height: 50rpx;
}
.shop-score {
  font-size:26rpx;
  line-height:50rpx;
  color:#999;
}
.list-position {
  line-height: 50rpx;
}
.list-price {
  line-height: 50rpx;
}
.shop-aside {
  position: relative;
  padding: 30rpx 60rpx 30rpx 30rpx;
  overflow: hidden;
  font-size: 30rpx;
  line-height: 60rpx;
  border-bottom: 1px solid #ddd;
}
.shop-aside:after {
  position: absolute;
  top: 50%;
  right: 30rpx;
  margin-top: -30rpx;
  font-size: 40rpx;
  color: #333;
}
.shop-aside text {
  float: left;
  color: #333;
  margin-right: 40rpx;
}
.shop-aside text:before {
  font-size: 34rpx;
  color: #999;
  margin-right: 10rpx;
}
.shop-position {
  position: relative;
  padding: 30rpx 30rpx 30rpx 80rpx;
}
.shop-position::before {
  position: absolute;
  left: 30rpx;
  top: 30rpx;
  line-height: 100rpx;
  font-size: 38rpx;
}
.shop-address {
  font-size: 30rpx;
  line-height: 60rpx;
  color: #333;
}
.shop-dis {
  font-size: 26rpx;
  line-height: 50rpx;
  color: #999;
}